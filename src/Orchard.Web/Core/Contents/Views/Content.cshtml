@using Orchard.Utility.Extensions;
@{
    if (Model.Title != null)
    {
        Layout.Title = Model.Title;
    }

    Model.Classes.Add("content-item");

    var contentTypeClassName = ((string)Model.ContentItem.ContentType).HtmlClassify();
    Model.Classes.Add(contentTypeClassName);

    var tag = Tag(Model, "article");

    List<Orchard.ContentManagement.ContentPart> parts = Model.ContentItem.Parts;
    var ywfields = parts.SingleOrDefault(a => a.PartDefinition.Name == "YwartField");
    dynamic titlePart = parts.FirstOrDefault(m => m.PartDefinition.Name == "TitlePart");

    dynamic summary = (ywfields.Fields.FirstOrDefault(m => m.Name == "Summary"));
    dynamic previewimg = (ywfields.Fields.FirstOrDefault(m => m.Name == "PrieviewImg4List"));
    dynamic subtitle = ywfields.Fields.FirstOrDefault(m => m.Name == "Subtitle");
}
@tag.StartElement
<script>
    function GetShareInfo() {
        return '{"Title":"@(titlePart != null? titlePart.Title:"")-@(subtitle!=null? subtitle.Value:"")" ,"Summary":"@(summary!=null?summary.Value:"")","ImgUrl":"@(previewimg!=null?previewimg.Value : "")" }';
    }
</script>
<header>
    @Display(Model.Header)
    @if (Model.Meta != null)
    {
        <div class="metadata">
            @Display(Model.Meta)
        </div>
    }
</header>
@Display(Model.Content)
@if (Model.Footer != null)
{
    <footer>
        @Display(Model.Footer)
    </footer>
}
@tag.EndElement